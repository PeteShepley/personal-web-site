---
import Layout from './Layout.astro';
import Author from '../components/Author.astro';

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: string;
    tags: string[];
  }
}

const {title, description, pubDate, tags} = Astro.props.frontmatter;
---

<Layout title={`${title} | Pete Shepley's Blog`} description={description}>
    <article class="blog-post">
        <header>
            <h1>{title}</h1>
            <p class="publish-date">Published on {pubDate}</p>
            <div class="tags">
              {tags?.map(tag => (
                      <span class="tag">{tag}</span>
              ))}
            </div>
        </header>

        <div class="content">
            <slot/>
        </div>

        <footer>
            <Author name="Pete Shepley"
                    bio="Pete Shepley is a software developer and tech enthusiast who loves sharing knowledge about web development and technology."/>

            <div class="post-navigation">
                <a href="/blog" class="back-to-blog">‚Üê Back to Blog</a>
            </div>
        </footer>
    </article>
</Layout>

<style>
    .blog-post {
        max-width: 800px;
        margin: 0 auto;
    }

    header {
        margin-bottom: 2rem;
    }

    h1 {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .publish-date {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1.5rem;
    }

    .tag {
        background-color: #f0f0f0;
        color: #555;
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    .content {
        line-height: 1.8;
        font-size: 1.1rem;
    }

    .content :global(h2) {
        font-size: 1.8rem;
        color: var(--primary-color);
        margin: 2rem 0 1rem;
    }

    .content :global(h3) {
        font-size: 1.4rem;
        color: var(--text-color);
        margin: 1.5rem 0 1rem;
    }

    .content :global(p) {
        margin-bottom: 1.5rem;
    }

    .content :global(ul), .content :global(ol) {
        margin-bottom: 1.5rem;
        padding-left: 1.5rem;
    }

    .content :global(li) {
        margin-bottom: 0.5rem;
    }

    .content :global(blockquote) {
        border-left: 4px solid var(--primary-color);
        padding-left: 1rem;
        font-style: italic;
        margin: 1.5rem 0;
        color: #555;
    }

    .content :global(pre) {
        background-color: #f5f5f5;
        padding: 1rem;
        border-radius: 5px;
        overflow-x: auto;
        margin: 1.5rem 0;
    }

    .content :global(code) {
        font-family: 'Courier New', Courier, monospace;
        font-size: 0.9rem;
    }

    .content :global(img) {
        max-width: 100%;
        height: auto;
        border-radius: 5px;
        margin: 1.5rem 0;
    }

    footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
    }

    .post-navigation {
        display: flex;
        justify-content: space-between;
    }

    .back-to-blog {
        display: inline-block;
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }

    .back-to-blog:hover {
        text-decoration: underline;
    }

    @media (max-width: 768px) {
        h1 {
            font-size: 2rem;
        }

        .content {
            font-size: 1rem;
        }
    }
</style>