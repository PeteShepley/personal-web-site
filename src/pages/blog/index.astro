---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all blog posts from the collection
const allPosts = await getCollection('blog');

// Sort posts by publication date (newest first)
const sortedPosts = allPosts.sort((a, b) => {
    const dateA = new Date(a.data.pubDate);
    const dateB = new Date(b.data.pubDate);
    return dateB - dateA;
});
---

<Layout title="Blog | Pete Shepley" description="Read my latest blog posts about web development, technology, and more">
    <section class="blog-header">
        <h1>My Blog</h1>
        <p>Thoughts, ideas, and insights about web development and technology</p>
    </section>

    <section class="blog-posts">
        {sortedPosts.map((post) => (
            <article class="post">
                <a href={`/blog/${post.slug}`}>
                    <h2>{post.data.title}</h2>
                    <p class="post-date">{post.data.pubDate}</p>
                    <p class="post-excerpt">{post.data.description}</p>
                    <div class="post-tags">
                        {post.data.tags.map((tag) => (
                            <span class="tag">{tag}</span>
                        ))}
                    </div>
                </a>
            </article>
        ))}
    </section>
</Layout>

<style>
    .blog-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    .blog-header h1 {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
    }

    .blog-header p {
        font-size: 1.2rem;
        color: var(--text-color);
    }

    .blog-posts {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        max-width: 800px;
        margin: 0 auto;
    }

    .post {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .post:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .post a {
        display: block;
        padding: 1.5rem;
        text-decoration: none;
        color: var(--text-color);
    }

    .post h2 {
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
    }

    .post-date {
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .post-excerpt {
        margin-bottom: 1rem;
        line-height: 1.6;
    }

    .post-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
    }

    .tag {
        background-color: #f0f0f0;
        color: #555;
        padding: 0.3rem 0.6rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }

    @media (max-width: 768px) {
        .blog-header h1 {
            font-size: 2rem;
        }
    }
</style>